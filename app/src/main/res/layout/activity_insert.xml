<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <Button android:id="@+id/InsertReturnButton"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="700dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Return"></Button>


    <EditText
        android:id="@+id/InsertProductNameEditText"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:hint="Enter product name here:"
        android:text="">

    </EditText>

    <EditText
        android:id="@+id/InsertProductAmountEditText"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"
        android:hint="Enter product quantity here:"
        android:text="">

    </EditText>

    <TextView
        android:visibility="gone"
        android:id="@+id/InsertTextView"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="INSERTING INTO REMOTE DB"
        />

    <Button
        android:id="@+id/DoInsertQueryButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="600dp"
        android:text="Insert"></Button>

</RelativeLayout>