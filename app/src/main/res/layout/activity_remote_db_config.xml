<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <Button android:id="@+id/ReturnButton"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="400dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Return"></Button>

    <Button android:id="@+id/SaveConfigButton"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save DB Connectio Configuration"></Button>

    <Button android:id="@+id/ResetToDefaultsButton"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="200dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Reset to default values"></Button>

</RelativeLayout>


