<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <Button android:id="@+id/ReturnButton"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="700dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Return"></Button>

    <Button android:id="@+id/SaveConfigButton"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="650dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Save DB Connection Configuration"></Button>

    <Button android:id="@+id/ResetToDefaultsButton"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="600dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Reset to default values"></Button>

    <TextView
        android:id="@+id/TitleTextView"
        android:layout_height="50dp"
        android:layout_width="400dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="Database Connection Configuration"></TextView>

    <TextView
        android:id="@+id/IPAddressTextView"
        android:layout_height="50dp"
        android:layout_width="120dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="IP Address:"></TextView>

    <EditText
        android:id="@+id/IPAddressEditText"
        android:layout_height="50dp"
        android:layout_width="220dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="125dp"
        android:inputType="text"></EditText>

    <TextView
        android:id="@+id/PortTextView"
        android:layout_height="50dp"
        android:layout_width="120dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="80dp"
        android:textSize="20dp"
        android:text="Port:"></TextView>

    <EditText
        android:id="@+id/PortEditText"
        android:layout_height="50dp"
        android:layout_width="220dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="125dp"
        android:inputType="text"></EditText>

    <TextView
        android:id="@+id/DBNameTextView"
        android:layout_height="50dp"
        android:layout_width="120dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:text="DB Name:"></TextView>

    <EditText
        android:id="@+id/DBNameEditText"
        android:layout_height="50dp"
        android:layout_width="220dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="125dp"
        android:inputType="text"></EditText>

    <TextView
        android:id="@+id/DBInstanceTextView"
        android:layout_height="50dp"
        android:layout_width="120dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="DB Instance:"></TextView>

    <EditText
        android:id="@+id/DBInstanceEditText"
        android:layout_height="50dp"
        android:layout_width="220dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="125dp"
        android:inputType="text"></EditText>
</RelativeLayout>


