<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <EditText
        android:id="@+id/SelectQueryEditText"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:hint="Enter product name here (or part of it's name):"
        android:text="">

    </EditText>


    <ListView
        android:id="@+id/ProductsListView"
        android:layout_width="300dp"
        android:layout_height="400dp"


        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"
        ></ListView>

    <Button
        android:id="@+id/DoSelectQueryButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="50dp"
        android:text="Query Database for Product"></Button>

    <Button android:id="@+id/ReturnButton"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="680dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Return"></Button>

</RelativeLayout>


